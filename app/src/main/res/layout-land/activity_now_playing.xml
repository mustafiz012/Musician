<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/now_playing_parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#093458"
    android:orientation="vertical"
    tools:context="musician.kuet.musta.NowPlaying">


    <LinearLayout
        android:id="@+id/actionbar_layout_now_playing"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@layout/bg_player_footer"
        android:orientation="horizontal"
        android:visibility="visible">

        <com.rey.material.widget.Button
            android:id="@+id/songList"
            style="@style/ButtonRippleStyle"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:background="@drawable/actionbar_back_btn_white"
            app:rd_enable="true" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/black_overlay" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/currentSong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="1"
                android:text="Nothing..."
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/accent_material_dark"
                android:textSize="20dip"
                tools:layout_conversion_absoluteHeight="24dp"
                tools:layout_conversion_absoluteWidth="468dp"
                tools:layout_conversion_absoluteX="50dp"
                tools:layout_conversion_absoluteY="0dp" />

            <TextView
                android:id="@+id/currentSongArtistName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="------"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#cfcfff"
                android:textSize="13dip"
                tools:layout_conversion_absoluteHeight="16dp"
                tools:layout_conversion_absoluteWidth="468dp"
                tools:layout_conversion_absoluteX="50dp"
                tools:layout_conversion_absoluteY="24dp" />

        </android.support.constraint.ConstraintLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/black_overlay" />

        <com.rey.material.widget.Button
            android:id="@+id/imageViewSongList"
            style="@style/ButtonRippleStyle"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/currentSong"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/btn_playlist"
            app:rd_enable="true" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black_overlay" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="2dp"
        android:paddingRight="2dp">

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/thumbnail" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/playingLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@layout/bg_player_footer"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/previous"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:src="@drawable/btn_previous" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/black_overlay" />

                <ImageButton
                    android:id="@+id/playPause"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:src="@drawable/btn_play" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/black_overlay" />

                <ImageButton
                    android:id="@+id/next"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:src="@drawable/btn_next" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black_overlay" />

            <RelativeLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/linearLayout3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/leftDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:text="0.0"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/accent_material_dark" />

                <TextView
                    android:id="@+id/rightDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:text="0.0"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/accent_material_dark" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black_overlay" />

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:orientation="horizontal">

                <com.rey.material.widget.Button
                    android:id="@+id/repeat"
                    style="@style/ButtonRippleStyle"
                    android:layout_width="56dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:background="@mipmap/repeat_off"
                    app:rd_enable="true" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/black_overlay" />

                <SeekBar
                    android:id="@+id/seekBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_toLeftOf="@+id/shuffle"
                    android:layout_toRightOf="@+id/repeat"
                    android:layout_weight="1"
                    android:indeterminate="false"
                    android:thumb="@drawable/seek_handler" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/black_overlay" />

                <com.rey.material.widget.Button
                    android:id="@+id/shuffle"
                    style="@style/ButtonRippleStyle"
                    android:layout_width="56dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:background="@mipmap/shuffle_off"
                    app:rd_enable="true" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black_overlay" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>